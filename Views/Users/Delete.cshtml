@model SpokeToTheManager.Models.User

@{
    ViewData["Title"] = "Delete";
}

<div class=" text-center">
    <h1>Eliminar usuario</h1>
</div>
<div class="card   row justify-content-center align-item-center" style="
     margin-left: 20%;
     margin-right:20%;
     margin-top: 16px;">
    <a class=" text-center">Al confirmar, eliminara el siguiente usuario:</a>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete" class="justify-content-center align-item-center">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a Usuarios</a>
    </form>
</div>
