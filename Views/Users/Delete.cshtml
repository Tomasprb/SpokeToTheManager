@model SpokeToTheManager.Models.User

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h1>Eliminar usuario</h1>
</div>

<div class="card row justify-content-center align-item-center" style="margin-left: 20%; margin-right: 20%; margin-top: 16px;">
    <div>
        <a class="text-center">
            <h4>Al confirmar, eliminará el siguiente usuario:</h4>
        </a>
    </div>
    
    <table class="table" style="margin-left: 5rem;">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <td>@Html.DisplayFor(model => model.Nombre)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <td>@Html.DisplayFor(model => model.Email)</td>
        </tr>
    </table>
    <div class="row justify-content-center" style="margin-top: 16px; padding-bottom:2%">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </form>
        <div class="btn btn-primary" style="margin-left: 8px;">
            <a asp-action="Index"><font color="white">Volver a la lista</font></a>
        </div>
    </div>
</div>


