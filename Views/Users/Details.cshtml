@model SpokeToTheManager.Models.User

@{
    ViewData["Title"] = "Details";
}

<div class="text-center">
    <h1>Detalles</h1>
</div>

<div class="row justify-content-md-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <h4>Usuarios</h4>
            </div>
            <table class="table table-bordered">
                <tr>
                    <th>Nombre:</th>
                    <td>@Html.DisplayFor(model => model.Nombre)</td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td>@Html.DisplayFor(model => model.Email)</td>
                </tr>
            </table>
            <div class="card-footer">
                <div class="btn btn-primary btn-back">
                    <a class="btn-edit" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                    <a class="btn-back" asp-action="Index">
                        <font color="white">Volver a la lista</font>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>