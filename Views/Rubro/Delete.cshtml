@model SpokeToTheManager.Models.Rubro

@{
    ViewData["Title"] = "Borrar";
}
<div class=" text-center">
    <h1>Eliminar rubro</h1>
</div>
<div class="row justify-content-md-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <h4>Rubro</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Nombre:</th>
                        <td>@Html.DisplayFor(model => model.Nombre)</td>
                    </tr>
                </table>
            </div>

            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <div class="btn btn-primary btn-back">
                        <a class="btn-back" asp-action="Index">
                            <font color="white">Volver a la lista</font>
                        </a>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>