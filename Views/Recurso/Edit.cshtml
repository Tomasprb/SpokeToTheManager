@model SpokeToTheManager.Models.Recurso

@{
    ViewData["Title"] = "Edit";
}

<div class=" text-center">
    <h1>Editar</h1>

    <h1>Recurso</h1>
</div>

<hr />
<div class="row justify-content-center align-item-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="nombre" class="control-label"></label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipo" class="control-label"></label>
                <select asp-for="tipo" class="form-control" asp-items="ViewBag.tipos">
                    <option value="">Seleccionar</option>
                </select>
                <span asp-validation-for="tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SocioId" class="control-label">Socio</label>
                <select asp-for="SocioId" class="form-control" asp-items="ViewBag.socios">
                    <option value="">Seleccionar</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="stock" class="control-label"></label>
                <input asp-for="stock" class="form-control" />
                <span asp-validation-for="stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="valor_unidad" class="control-label"></label>
                <input asp-for="valor_unidad" class="form-control" />
                <span asp-validation-for="valor_unidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="container" style="padding-bottom:1rem">
    <div class="row justify-content-md-center">
        <div class=" btn btn-primary">
            <a asp-action="Index">
                <FONT COLOR="white">volver a la lista</FONT>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
