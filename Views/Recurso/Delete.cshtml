@model SpokeToTheManager.Models.Recurso

@{
    ViewData["Title"] = "Borrar";
}

<div class="text-center">
    <h1>Eliminar Recurso</h1>
</div>

<div class="row justify-content-md-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <h4>Recurso</h4>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Nombre:</th>
                        <td>@Html.DisplayFor(model => model.nombre)</td>
                    </tr>
                    <tr>
                        <th>Tipo:</th>
                        <td>@Html.DisplayFor(model => model.tipo)</td>
                    </tr>
                    <tr>
                        <th>Stock:</th>
                        <td>@Html.DisplayFor(model => model.stock)</td>
                    </tr>
                    <tr>
                        <th>Valor por Unidad:</th>
                        <td>@Html.DisplayFor(model => model.valor_unidad)</td>
                    </tr>
                </table>
            </div>

            <div class="card-footer">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <div class="btn btn-primary btn-back">
                        <a class="btn-back" asp-action="Index">
                            <font color="white">Volver a la lista</font>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>