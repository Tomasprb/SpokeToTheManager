@model SpokeToTheManager.Models.Recurso

@{
    ViewData["Title"] = "Create";
}

<div class=" text-center">
    <h1>Crear Recurso</h1>
</div>
<hr />
<div class="  row justify-content-center align-item-center">
    <div class="col-md-7">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Nombre/Descripción</label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorXUnidad" class="control-label">Valor por unidad</label>
                <input asp-for="ValorXUnidad" class="form-control" />
                <span asp-validation-for="ValorXUnidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="container" style="padding-bottom:1rem">
    <div class="row justify-content-md-center">
        <div class=" btn btn-primary">
            <a asp-action="Index"><FONT COLOR="white">Volver</FONT></a>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}