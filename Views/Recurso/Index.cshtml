@model IEnumerable<SpokeToTheManager.Models.Recurso>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center"> Recurso</h1>
<div style="
          margin-left: 16rem">
    <p>
        <a asp-action="Create">Crear nueva</a>
    </p>
</div>
<div class="card " style="
     margin-left: 15rem;
    margin-right:80px;
     margin-top: 16px;">
    <div class="card-header">
        <h3 class="card-title"> Recurso</h3>
    </div>
    <div class="card-body p-0">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.stock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor_unidad)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.stock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.valor_unidad)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
